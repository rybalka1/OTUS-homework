# Describe VMs
MACHINES = {
  # VM name "kernel update"
  :"systemd" => {
              # VM box
              :box_name => "vscoder/centos-7-5",
              # VM CPU count
              :cpus => 4,
              # VM RAM size (Mb)
              :memory => 2048,
              # forwarded ports
              :forwarded_port => [],
              # provision files
              :provision_files => [
                { :source => "./logmon/logmon.sh", :destination => "logmon.sh" },
                { :source => "./logmon/logmon", :destination => "logmon" },
                { :source => "./logmon/logmon.service", :destination => "logmon.service" },
                { :source => "./spawn-fcgi/spawn-fcgi", :destination => "spawn-fcgi" },
                { :source => "./spawn-fcgi/spawn-fcgi.service", :destination => "spawn-fcgi.service" },
                { :source => "./httpd/httpd.target", :destination => "httpd.target" },
                { :source => "./httpd/httpd@.service", :destination => "httpd@.service" }
              ],
              # provision scripts
              :provision_scripts => [
                { :path => "./scripts/0-whoami.sh" },
                { :path => "./scripts/1-prepare.sh" },
                { :path => "./scripts/2-install-logmon.sh" },
                { :path => "./scripts/3-spawn-fcgi-service.sh" },
                { :path => "./scripts/4-httpd-service-template.sh" }
              ],
            }
}

# # Function to check whether VM was already provisioned
# def provisioned?(vm_name='default', provider='virtualbox')
#   File.exist?(".vagrant/machines/#{vm_name}/#{provider}/action_provision")
# end

Vagrant.configure("2") do |config|
  MACHINES.each do |boxname, boxconfig|
    # Disable shared folders if not provisioned
    config.vm.synced_folder ".", "/vagrant", type: "virtualbox", disabled: false
    # Apply VM config
    config.vm.define boxname do |box|
      # Set VM base box and hostname
      box.vm.box = boxconfig[:box_name]
      box.vm.host_name = boxname.to_s
      # Additional network config if present
      if boxconfig.key?(:net)
        boxconfig[:net].each do |ipconf|
          box.vm.network "private_network", ipconf
        end
      end
      # Port-forward config if present
      if boxconfig.key?(:forwarded_port)
        boxconfig[:forwarded_port].each do |port|
          box.vm.network "forwarded_port", port
        end
      end
      # VM resources config
      box.vm.provider "virtualbox" do |v|
        # Set VM RAM size and CPU count
        v.memory = boxconfig[:memory]
        v.cpus = boxconfig[:cpus]
      end
      # provision files
      if boxconfig.key?(:provision_files)
        boxconfig[:provision_files].each do |file|
          box.vm.provision "file",
              # source file path on host
              source: file[:source],
              # destination file path on VM
              destination: file[:destination]
        end
      end
      # provision scripts
      if boxconfig.key?(:provision_scripts)
        boxconfig[:provision_scripts].each do |script|
          box.vm.provision "shell",
              # Path to script
              path: script[:path],
              # Script's args
              args: script[:args],
              # Set environment variables for script
              env: {"PROVISIONER" => "vagrant"}
          ## reload VM
          # config.vagrant.plugins = ["vagrant-reload"]
          # box.vm.provision :reload if script[:reload]
        end
      end
    end
  end
end
